<% layout('layouts/base') %>
<form action="/register" method="POST" class="space-y-4 w-72">
  <h1 class="text-2xl font-bold text-center mb-4">Register</h1>
  <input name="username" placeholder="Username" class="w-full border p-2 rounded" required />
  <input type="email" name="email" placeholder="Email" class="w-full border p-2 rounded" required />
  <input type="password" name="password" placeholder="Password" class="w-full border p-2 rounded" required />
  <button class="w-full bg-green-600 text-white py-2 rounded">Create account</button>
</form>
