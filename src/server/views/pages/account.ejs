<% layout('layouts/base') %>

<div class="max-w-lg w-full bg-white rounded-xl shadow p-8">
  <!-- header -->
  <h1 class="text-3xl font-bold text-blue-700 mb-6 text-center">
    <i class="fa-solid fa-id-card mr-2"></i> Account Overview
  </h1>

  <!-- user block -->
  <div class="flex items-center mb-8">
    <div class="flex-shrink-0">
      <div class="h-16 w-16 rounded-full bg-blue-100 flex items-center justify-center text-3xl font-semibold text-blue-600">
        <%= username?.charAt(0).toUpperCase() %>
      </div>
    </div>
    <div class="ml-4">
      <p class="text-xl font-semibold"><%= username %></p>
      <p class="text-gray-500"><%= email %></p>
    </div>
  </div>

  <!-- stats grid -->
  <div class="grid grid-cols-2 gap-4 text-center">
    <div class="p-4 rounded-lg bg-gray-100">
      <p class="text-2xl font-bold"><%= wins %></p>
      <p class="text-sm text-gray-500">Wins</p>
    </div>

    <div class="p-4 rounded-lg bg-gray-100">
      <p class="text-2xl font-bold"><%= losses %></p>
      <p class="text-sm text-gray-500">Losses</p>
    </div>

    <div class="p-4 rounded-lg bg-gray-100">
      <p class="text-2xl font-bold"><%= played %></p>
      <p class="text-sm text-gray-500">Total Games</p>
    </div>

    <div class="p-4 rounded-lg bg-gray-100">
      <p class="text-2xl font-bold"><%= timePlayed %></p>
      <p class="text-sm text-gray-500">Time Played</p>
    </div>
  </div>

  <!-- actions -->
  <div class="mt-8 flex justify-between">
    <a href="/play"
       class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
       <i class="fa-solid fa-play mr-1"></i> Play Again
    </a>

    <a href="/logout"
       class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
       <i class="fa-solid fa-right-from-bracket mr-1"></i> Logout
    </a>
  </div>
</div>
